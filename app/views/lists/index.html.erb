<%= render 'share/banner' %>
<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1 class="mt-4">My lists</h1>
    <%= link_to new_list_path do %>
      <button type="button" class="btn btn-primary">Create a movie list</button>
    <% end %>

  </div>

  <div class="d-flex gap-3">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class: "card col-4 rounded" do %>
        <%# <%= render 'share/card' %>
        <% if list.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.12) 0, rgba(0,0,0,0.55) 74.4%), url('<%= url_for list.photo %>')">
            <%= list.name %>
          </div>
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.12) 0, rgba(0,0,0,0.55) 74.4%), url('https://images.unsplash.com/photo-1534489573486-7d1fa4f436e4?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80')">
            <%= list.name %>
          </div>
        <% end %>
      <% end  %>

    <% end  %>
  </div>
</div>
