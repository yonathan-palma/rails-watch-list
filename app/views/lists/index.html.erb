<%= render 'share/banner' %>
<div class="container">
  <h1>My lists</h1>
  <div class="d-flex">
    <% @lists.each do |list| %>
      <%= link_to(list_path(list)) do %>
        <%# <%= render 'share/card' %>
        <% if list.photo.attached? %>
          <div class="card" style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.12) 0, rgba(0,0,0,0.55) 74.4%), url('<%= url_for list.photo %>')">
            <p><%= list.name %></p>
            <%# <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %> %>
          </div>

        <% else %>
          <div class="card" style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.12) 0, rgba(0,0,0,0.55) 74.4%), url('https://images.unsplash.com/photo-1534489573486-7d1fa4f436e4?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80')">
            <p><%= list.name %></p>
          </div>
        <% end %>
      <% end  %>

    <% end  %>
  </div>
</div>
